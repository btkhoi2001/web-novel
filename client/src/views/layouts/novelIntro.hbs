    <script>
        $(".mobile-navbar-btn").click(function(){
            $(".mobile-navbar").toggleClass('d-none');
        });
        $(".mobile-item-link").click(function(){
            $(this).parent(".mobile-navbar-items").children(".mobile-droplist").toggleClass('d-none');
        });
        $("#darkmode").click(function () {
            $(document.body).css("color","#ffffff99");
            $("#header").css("background-color", "var(--header-dark-color)");
            $("#footer").css("background-color", "#121212");
            $(".main").css("background", "url(bg_dark.gif) top center repeat");
            $(".droplist-fluid").css("background-color", "var(--header-dark-color)");
            $(".droplist-normal").css("background-color", "var(--header-dark-color)");
            $(".fullepisode").css({
                "color": "var(--mint-color)",
                "background-color": "var(--dark-background-color)",
                "border": "1px solid var(--mint-color)"
            });
            $(".novel-title").css("color", "white");
            $(".col-info-desc h3.title").css("border-bottom-color", "#000");
            $(".title a").css("color", "white");
            $(".title-list").css("border-bottom-color","#000");
            $(".title-list>h2, .title-list>h4").css({
                "color": "white",
                "border-bottom-color": "white"
            });
            $("#rating span").css("color","#fff");
            $("#list-chapter").css("background-color","transparent");
            $(".comment-box").css("background-color","transparent");
            $(".comment-list-item-info-content").css("color", "white");
            $(".comment-list-item-info-like, .comment-list-item-info-reply").css("color", "white");
            $(".list-side h3 a").css("color", "#92bb35");
            $(".col-truyen-side .list").css({
                "background-color": "inherit",
                "border": "inherit"
            });
            $(".list>.row").css("background-color", "inherit");
            $(".list>.row:nth-child(2n)").css("background-color", "#ffffff0a");
            $(".col-truyen-side .list.list-side>.row:nth-child(2)").css("background-color","transparent");
        })

        $("#lightmode").click(function () {
            $(document.body).css("color", "#4E4E4E");
            $("#header").css("background-color", "var(--header-light-color)");
            $("#footer").css("background-color", "var(--header-light-color)");
            $(".main").css("background", "url(bg_light.jpg) top center repeat-x #F4F4F4");
            $(".droplist-fluid").css("background-color", "var(--header-light-color)");
            $(".droplist-normal").css("background-color", "var(--header-light-color)");
            $(".fullepisode").css({
                "color": "white",
                "background-color": "#2A5893",
                "border": "none"
            });
            $(".novel-title").css("color", "#4E4E4E");
            $(".col-info-desc h3.title").css("border-bottom-color", "#b5b5b5");
            $(".title a").css("color", "#4E4E4E");
            $(".title-list").css("border-bottom-color","#CCC");
            $(".title-list>h2, .title-list>h4").css({
                "color": "#4E4E4E",
                "border-bottom-color": "#4E4E4E"
            });
            $("#rating span").css("color","#000");
            $("#list-chapter").css("background-color","#f4f4f4");
            $(".comment-box").css("background-color","#f4f4f4");
            $(".comment-list-item-info-content").css("color", "#0b0b0b");
            $(".comment-list-item-info-like, .comment-list-item-info-reply").css("color", "#2f2f2f");
            $(".list-side h3 a").css("color", "#083767");
            $(".col-truyen-side .list").css({
                "background-color": "#ecf0f1",
                "border": "1px solid #D9E1E4"
            });
            $(".list>.row").css("background-color", "#ecf0f1");
            $(".col-truyen-side .list.list-side").css({
                "background-color": "transparent",
                "border": "0"
            });
            $(".col-truyen-side .list.list-side>.row").css("background-color", "transparent")
        })
    </script>

